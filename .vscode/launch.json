    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug 'doe run bash'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=doe",
                    "--package=doe"
                ],
                "filter": {
                    "name": "doe",
                    "kind": "bin"
                }
            },
            "args": ["run", "bash"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug 'doe run cowsay'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=doe",
                    "--package=doe"
                ],
                "filter": {
                    "name": "doe",
                    "kind": "bin"
                }
            },
            "args": ["-vvv", "run", "cowsay"],
            "cwd": "${workspaceFolder}"
        },

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug 'doe inject'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=doe",
                    "--package=doe"
                ],
                "filter": {
                    "name": "doe",
                    "kind": "bin"
                }
            },
            "args": ["inject"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug 'doe -vvvv init bash'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=doe",
                    "--package=doe"
                ],
                "filter": {
                    "name": "doe",
                    "kind": "bin"
                }
            },
            "args": ["-vvvv", "init", "bash"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'doe'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=doe",
                    "--package=doe"
                ],
                "filter": {
                    "name": "doe",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}