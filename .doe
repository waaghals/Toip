# php
# > docker run --rm -v ${PWD}:/usr/src/myapp -w /usr/src/myapp php:7.4-cli php ${COMMAND} ${ARGS}
#
#
# | // pipe
# || // run rhs when lhs has non-zero exit code
# && // run rhs when lhs has zero exit code
# ${VAR} // envvar
# $VAR // env var
# ${VAR:-default} // environment variable with default
# ; // multiple commands
# exit // stop
# # // command
# ~ // homedir
# ${VAR:+ifset} // return ifset when VAR is true
# $1 // first argument
# $* // all arguments
# $[1..] // argument slices?
# `` // command substitusion
# $() // command substitusion
# ^ // Current location of config
